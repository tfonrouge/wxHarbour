# -------------------------------------------------------------------------

# C++ compiler 
CXX := g++

# Type of Application [yes,no]
WXHAPP := yes

# Type of compiled binaries [debug,release]
BUILD := debug

# Warning level for the Harbour Compiler [0,1,2,3]
HBWARNL := 3

# Exit severity level for the Harbour Compiler [0,1,2]
HBEXITS := 2

# Output type generated by the Harbour Compiler [c,o,w,h]
HBOUTTYP := o



# -------------------------------------------------------------------------
# Do not modify the rest of this file!
# -------------------------------------------------------------------------

### Variables: ###

WXHPATH = /usr/local/wxH
BUILDDIR = obj/gcc-unix
HBFLAGS = -n -a -v -m -g$(HBOUTTYP) $(HBDEBUG) -w$(HBWARNL) -es$(HBEXITS) \
	-dHB_OS_LINUX
HBINCLUDES = -Iinclude -I/usr/include/harbour -I/usr/local/include \
	-I$(WXHPATH)/include
HBLIBS = -L/usr/lib/harbour -Wl,--start-group -lhbvm -lhbpp -lhbrtl -lhbrdd \
	-lrddfpt -lrddcdx -lrddntx -lhbhsx -lhbsix -lhbusrrdd -lhbmacro -lhbcommon \
	-lhblang -lhbcpage -lgtcrs -lgtsln -lgtxwc -lgtcgi -lgtstd -lgtpca -lgttrm \
	-lhbdebug -lhbcplr -lhbpcre -lhbct -lhbnf -lhbtip -lxhb -Wl,--end-group
WXLIBS = -L$(WXHPATH)/lib -lwxharbour-gcc-unix `wx-config --libs`
OSLIBS = -lfm -lm -ldl -lslang -lncurses -L/usr/X11R6/lib -lX11 -lgpm
SIZERS_OBJECTS =  \
	$(BUILDDIR)/sizers_login.o \
	$(BUILDDIR)/sizers_main.o

### Conditionally set variables: ###

ifeq ($(BUILD),debug)
HBDEBUG = -b
endif
ifeq ($(WXHAPP),no)
LDFLAGS = $(HBLIBS) $(OSLIBS)
endif
ifeq ($(WXHAPP),yes)
LDFLAGS = $(HBLIBS) $(WXLIBS) $(OSLIBS)
endif


all: $(BUILDDIR)
$(BUILDDIR):
	@mkdir -p $(BUILDDIR)

### Targets: ###

all: ./sizers

install: all

uninstall: 

clean: 
	rm -f $(BUILDDIR)/*.o
	rm -f $(BUILDDIR)/*.d
	rm -f ./sizers

./sizers: $(SIZERS_OBJECTS)
	$(CXX) -o $@ $(SIZERS_OBJECTS) $(LDFLAGS)

$(BUILDDIR)/sizers_login.o: ./login.prg
	harbour $(HBFLAGS) $(HBINCLUDES) -o$@ $<

$(BUILDDIR)/sizers_main.o: ./main.prg
	harbour $(HBFLAGS) $(HBINCLUDES) -o$@ $<

.PHONY: all install uninstall clean


