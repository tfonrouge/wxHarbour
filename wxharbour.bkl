<?xml version="1.0" ?>
<makefile>

  <include file="config/tmpl_hrb.bkl"/>

  <set-srcdir>src</set-srcdir>

  <lib id="wxharbour">
    <dirname>
      lib
    </dirname>
    <sources>
      $(fileList("*.c"))
      $(fileList("*.cpp"))
      $(fileList("*.prg"))
    </sources>
    <warnings>max</warnings>
    <precomp-headers>on</precomp-headers>
    <optimize>
      speed
    </optimize>
  </lib>

  <subproject id="samples">
    <dir>samples</dir>
    <depends>wxharbour</depends>
    <installable>no</installable>
  </subproject>

</makefile>
