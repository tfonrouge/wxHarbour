<?xml version="1.0" ?>
<makefile>

  <include file="../../config/tmpl_hrb.bkl"/>

  <wxharbour-exe id="sizers">
    <sources-at>
      .
    </sources-at>
    <include>../../include/wxHarbour</include>
    <lib-path>../../$(__BUILDDIR__)</lib-path>
  </wxharbour-exe>
  
  <action id="run">
    <if cond="TOOLSET=='win32'">
      <command>
        .\sizers.exe
      </command>
    </if>
    <if cond="TOOLSET=='unix'">
      <command>
        ../../bin/run_App.sh sizers
      </command>
    </if>
    <depends>
      all
    </depends>
  </action>

</makefile>
